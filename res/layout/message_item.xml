<?xml version="1.0" encoding="utf-8"?>
<dykzei.eleeot.GotHigh.gui.MessageItem
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:id="@+id/root"
  android:orientation="vertical">  
  
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="#462"
		android:id="@+id/head" >
		
		<TextView
			android:id="@+id/id"
			android:singleLine="true"
			android:padding="2dip"  
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
			android:textAppearance="@style/Id"
		  	android:text="#0123456789"
		  	android:ellipsize="end" />

		<TextView
			android:id="@+id/date"
			android:singleLine="true"	  
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
			android:textAppearance="@style/Text"
		  	android:text="00/00/00(Mon)00:00:00"
		  	android:padding="2dip"
		  	android:layout_gravity="right"
		  	android:gravity="right"
		  	android:layout_toRightOf="@+id/id"
		  	android:layout_alignParentTop="@+id/id" />

		<TextView
			android:id="@+id/ommit"
			android:singleLine="true"	  
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
			android:textAppearance="@style/Text"
		  	android:text="10 / 4i"
		  	android:padding="2dip"
		  	android:layout_alignParentRight="@+id/date"
		  	android:layout_below="@+id/date" />

		<TextView
			android:id="@+id/subject"
			android:singleLine="false"	  
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
			android:textAppearance="@style/Text"
			android:padding="2dip"
		  	android:text="Anonymous: subject"
		  	android:layout_alignParentLeft="@+id/id"
		  	android:layout_below="@+id/ommit" />

	</RelativeLayout>	
	
	<LinearLayout
		android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:orientation="vertical"
	  	android:background="#f000"
	  	android:id="@+id/body">  	
	
		<TextView
			android:id="@+id/imgProp"
			android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
			android:textAppearance="@style/Text"
		  	android:text="10kb/300x300/jpg"
		  	android:paddingTop="10dip"
		  	android:visibility="gone"
		  	android:layout_gravity="center_horizontal"
		  	android:gravity="center_horizontal" />
		  	
		<ImageView 
			android:id="@+id/image"
			android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:layout_gravity="center"
		  	android:gravity="center"
		  	android:scaleType="fitCenter"
		  	android:adjustViewBounds="true" />
	  	
		<TextView
			android:id="@+id/text"	
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"	
	  		android:padding="5dip"		  		 	
		  	android:textAppearance="@style/Text" />

	</LinearLayout>
  	
</dykzei.eleeot.GotHigh.gui.MessageItem>
